<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ksn.kraiponn.lablistui">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Main2Activity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.TabEffectActivity"
            android:label="@string/title_activity_tab_effect"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.LabListViewActivity"
            android:label="@string/title_activity_lab_list_view"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".activity.CustomListActivity"
            android:label="@string/title_activity_custom_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MultiLayoutListActivity"
            android:label="@string/title_activity_multi_layout_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.RecyclerActivity"
            android:label="@string/title_activity_recycler"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>